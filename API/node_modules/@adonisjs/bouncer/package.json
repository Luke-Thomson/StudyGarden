{
  "name": "@adonisjs/bouncer",
  "version": "3.1.6",
  "description": "Authorization layer for AdonisJS",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands": "./build/commands/main.js",
    "./bouncer_provider": "./build/providers/bouncer_provider.js",
    "./plugins/edge": "./build/src/plugins/edge.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=adonisjs:bouncer npm run quick:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" --up=\"1\" build",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "postcompile": "npm run copy:templates && npm run index:commands",
    "build": "npm run compile",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "index:commands": "adonis-kit index build/commands",
    "quick:test": "node --import=ts-node-maintained/register/esm --enable-source-maps bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/eslint-config": "^2.1.0",
    "@adonisjs/i18n": "^2.2.0",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.0.1",
    "@japa/expect-type": "^2.0.3",
    "@japa/file-system": "^2.3.2",
    "@japa/runner": "^4.2.0",
    "@japa/snapshot": "^2.0.8",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "1.10.7",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "edge.js": "^6.2.1",
    "eslint": "^9.28.0",
    "reflect-metadata": "^0.2.2",
    "release-it": "^19.0.3",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@poppinss/utils": "^6.9.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.17.1",
    "@adonisjs/i18n": "^2.2.0",
    "edge.js": "^6.2.1"
  },
  "peerDependenciesMeta": {
    "@adonisjs/core": {
      "optional": true
    },
    "@adonisjs/i18n": {
      "optional": true
    },
    "edge.js": {
      "optional": true
    }
  },
  "homepage": "https://github.com/adonisjs/bouncer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/bouncer.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/bouncer/issues"
  },
  "keywords": [
    "authorization",
    "adonisjs"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "contributors": [
    "Julien Ripouteau <julien@ripouteau.com>"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts",
      "./providers/bouncer_provider.ts",
      "./commands/make_policy.ts",
      "./src/plugins/edge.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
